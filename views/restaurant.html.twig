<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <title>Restaurant Database</title>
    </head>
    <body>
        <div class="container">
            <h1>{{ cuisine.getCuisineType }}</h1>
            {% if restaurants is not empty %}
            <p>Your choices are:</p>

            <ul>
                {% for restaurant in restaurants %}
                    <li>{{ restaurant.getRestaurantName }} <a href="/editrestaurant/{{ restaurant.getId }}" class="btn btn-warning">Edit</a><a href="/deleterestaurant/{{ restaurant.getId }}" class="btn btn-danger">Delete</a></li>
                {% endfor %}
            </ul>
            {% endif %}


            <form class="form-group" action="/addrestaurant" method="post">
                <label for="restaurant">Enter a restaurant:</label>
                <input class="form-control" type="text" name="restaurant"><br>
                <input type="hidden" name="cuisine_id" value="{{ cuisine_id }}">
                <button class="btn btn-success" type="submit">Save</button>
            </form>
            <p ><a class="btn btn-warning" href="/">Home</a></p>

            <form class="form-group" action="/search" method="post">
                <label for="search">Search for a restaurant by name:</label>
                <input class="form-control" type="text" name="search">
                <button class="btn btn-warning" type="submit">Search</button>
            </form>
        </div>
    </body>
</html>
